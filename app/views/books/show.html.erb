<div class="container">
<div class="row">

<% if flash[:notice] %>
<p class="notice"><%= notice %></p>
<% end %>
<% if flash[:alert] %>
<p class="alert"><%= alert %></p>
<% end %>
<div class="container">
<%= yield %>
</div>

<div class="col-xs-3">
  <h2>User info</h2>
    <tr>
    <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    </tr>
      <table class="table">
        <tbody><tr></tr>
          <tr>
    	      <th>name</th>
    	      <th><%=current_user.name %></th>
          </tr>
          <tr>
    	      <th>introduction</th>
    	      <th></th>
          </tr>
        </tbody>
        </table>


    <%= link_to "" ,edit_user_path(@user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

    <h2>New book</h2>
     <%= form_with model:@book, local:true do |f| %>
      <div class="field row">
         <!--<label for="book_title">Title</label>-->
        <%= f.label :title, "Title" %>
        <%= f.text_field :title ,class:"col-xs-12 book_title" %>
      </div>
    <div class="field row">
      <!--<label for="book_opinion">Opinion</label>-->
      <%= f.label :body, "Opinion" %>
      <%= f.text_area :body ,class:"col-xs-12 book_body" %>
    </div>

    <div class="actions row">
      <%= f.submit 'Create Book' ,class:"btn btn-primary col-xs-12" %>
    </div>
    <% end %>
</div>


<div class="col-xs-9">
    <h2>Book detail</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>
        <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
        <%= link_to user_path(@user) do %>
        <%= @user.name %>
        <% end %>
        </td>
        <td><%= link_to @all_book.title, book_path(@all_book) %></td>
        <td><%= @all_book.body %></td>
        <% if current_user == @all_book.user %>
        <td><%= link_to "Edit", edit_book_path(@all_book) %></td>
        <td><%= link_to "Destroy", book_path(@all_book), method: :delete %></td>
        <% end %>
      </tr>
  </tbody>
</table>
</div>
</div>
</div>