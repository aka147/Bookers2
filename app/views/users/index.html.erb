<div class="container">
<div class="row">



<div class="col-xs-3">
  <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr>
          <%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
        </tr>
          <tr>
    	      <th>name</th>
    	      <th><%=current_user.name %></th>
          </tr>
          <tr>
    	      <th>introduction</th>
    	      <th><%= @user.introduction %></th>
          </tr>
        </tbody>
        </table>

    <%= link_to "" ,edit_user_path(current_user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

    <h2>New book</h2>
     <%= form_with model:@book, local:true do |f| %>
      <div class="field row">
         <!--<label for="book_title">Title</label>-->
        <%= f.label :title, "Title" %>
        <%= f.text_field :title ,class:"col-xs-12 book_title" %>
      </div>
    <div class="field row">
      <!--<label for="book_opinion">Opinion</label>-->
      <%= f.label :body, "Opinion" %>
      <%= f.text_area :body ,class:"col-xs-12 book_body" %>
    </div>

    <div class="actions row">
      <%= f.submit 'Create Book' ,class:"btn btn-primary col-xs-12" %>
    </div>
    <% end %>
</div>


<div class="col-xs-9">
    <h2>Users</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
        <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg' , fallback: "no_image.jpg", size: "50x50" %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to "Show" ,user_path(user) %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>
</div>
</div>